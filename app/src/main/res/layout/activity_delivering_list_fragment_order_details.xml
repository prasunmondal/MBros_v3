<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginVertical="8dp"
        android:foregroundGravity="center_vertical"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingHorizontal="10dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/activity_delivering_deliver_fragment_customer_seq_no"
            android:layout_width="50dp"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:hint="Seq No."
            android:textColor="#B6B6B6" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/activity_delivering_deliver_fragment_customer_name"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginLeft="5dp"
            android:layout_weight=".5"
            android:gravity="center_vertical"
            android:paddingLeft="5dp"
            android:textColor="#231602"
            android:textSize="20sp" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/activity_delivering_deliver_fragment_order_pc"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight=".1"
            android:gravity="center_vertical"
            android:hint="pc"
            android:textColor="#B6B6B6" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/activity_delivering_deliver_fragment_order_kg"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight=".2"
            android:gravity="center_vertical"
            android:hint="kg"
            android:textColor="#B6B6B6" />


    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>