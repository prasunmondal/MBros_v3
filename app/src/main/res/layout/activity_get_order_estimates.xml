<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_get_order_estimates__parent_view"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:backgroundTint="#B62929"
    android:paddingVertical="10dp"
    tools:context=".CustomerOrders.GetOrders.ActivityGetCustomerOrders">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:id="@+id/constraintLayout3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent">

            <TextView
                android:id="@+id/textView33"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Avg Wt."
                android:textSize="20sp" />

            <EditText
                android:id="@+id/get_orders_avg_wt34"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:ems="10"
                android:inputType="number" />

            <TextView
                android:id="@+id/textView34"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="(gms)" />

            <androidx.appcompat.widget.AppCompatEditText
                android:id="@+id/activity_get_order_estimates__load_pc"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_weight=".5"
                android:inputType="number"
                android:textSize="20sp"
                tools:layout_editor_absoluteX="79dp"
                tools:layout_editor_absoluteY="7dp" />

            <TextView
                android:id="@+id/textView7"
                android:layout_width="30dp"
                android:layout_height="wrap_content"
                android:text="pc"
                android:textSize="20sp" />

            <androidx.appcompat.widget.AppCompatEditText
                android:id="@+id/activity_get_order_estimates__load_kg"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_weight=".5"
                android:inputType="number"
                android:textSize="20sp"
                tools:layout_editor_absoluteX="79dp"
                tools:layout_editor_absoluteY="7dp" />

            <TextView
                android:id="@+id/textView8"
                android:layout_width="30dp"
                android:layout_height="wrap_content"
                android:text="Kg"
                android:textSize="20sp" />

            <Button
                android:id="@+id/button3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:onClick="onClickClearButton"
                android:text="X" />
        </LinearLayout>

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginBottom="15dp"
            app:layout_constraintBottom_toTopOf="@+id/constraintLayout2"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/constraintLayout3">

            <LinearLayout
                android:id="@+id/activity_get_order_estimates__order_list_container"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                app:layout_constraintBottom_toTopOf="@+id/constraintLayout2"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="1.0"
                app:layout_constraintStart_toStartOf="parent">

            </LinearLayout>
        </ScrollView>

        <LinearLayout
            android:id="@+id/constraintLayout2"
            android:layout_width="0dp"
            android:layout_height="40dp"
            app:layout_constraintBottom_toTopOf="@+id/linearLayout8"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent">

            <TextView
                android:id="@+id/textView2"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:foregroundGravity="center_vertical"
                android:gravity="center_vertical"
                android:text="Total: "
                android:textSize="20sp"
                android:textStyle="bold"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/activity_get_order_estimates__total_pc"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginStart="20dp"
                android:layout_weight=".5"
                android:gravity="center_vertical"
                android:text="0 pc"
                android:textSize="20sp"
                tools:layout_editor_absoluteX="79dp"
                tools:layout_editor_absoluteY="7dp" />

            <TextView
                android:id="@+id/activity_get_order_estimates__total_kg"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginStart="20dp"
                android:layout_weight=".5"
                android:gravity="center_vertical"
                android:text="0 kg"
                android:textSize="20sp"
                tools:layout_editor_absoluteX="79dp"
                tools:layout_editor_absoluteY="7dp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/linearLayout8"
            android:layout_width="match_parent"
            android:layout_height="42dp"
            android:orientation="horizontal"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent">

            <TextView
                android:id="@+id/textView30"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="#E8A18A"
                android:gravity="center"
                android:paddingVertical="3dp"
                android:text="1"
                android:textSize="30sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/textView31"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="#FFEB3B"
                android:gravity="center"
                android:onClick="onClickGoToFinalizeOrdersPage"
                android:paddingVertical="3dp"
                android:text="2"
                android:textSize="30sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/textView32"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="#8BC34A"
                android:gravity="center"
                android:onClick="onClickGoToMakeListPage"
                android:paddingVertical="3dp"
                android:text="3"
                android:textSize="30sp"
                android:textStyle="bold" />

            <Button
                android:id="@+id/activity_get_order_estimates__save_date_btn"
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:onClick="onClickSaveBtn"
                android:text="Save" />
        </LinearLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>