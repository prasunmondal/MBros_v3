<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background2"
    tools:context=".CustomerOrders.MoneyDeposit.CustomerDeposit.CustomerMoneyDepositUI">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:orientation="vertical"
        android:paddingHorizontal="15dp"
        app:layout_constraintBottom_toTopOf="@+id/textView67"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingVertical="10dp">

            <TextView
                android:id="@+id/textView54"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:fontFamily="@font/bai_jamjuree_medium"
                android:text="Beneficiary"
                android:textColor="@color/osl_ui_attribute_label_text_color"
                android:textSize="13sp" />

            <AutoCompleteTextView
                android:id="@+id/md_beneficiary"
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:layout_weight="1"
                android:completionThreshold="0"
                android:imeOptions="actionNext"
                android:inputType="textNoSuggestions"
                android:textColor="@color/osl_ui_attribute_value_text_color"
                android:textSize="14sp"
                tools:ignore="TouchTargetSizeCheck" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingVertical="10dp">

            <TextView
                android:id="@+id/textView55"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:fontFamily="@font/bai_jamjuree_medium"
                android:text="Mode"
                android:textColor="@color/osl_ui_attribute_label_text_color"
                android:textSize="13sp" />

            <AutoCompleteTextView
                android:id="@+id/md_transfer_mode"
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:layout_weight="1"
                android:completionThreshold="0"
                android:imeOptions="actionNext"
                android:inputType="textNoSuggestions"
                android:textColor="@color/osl_ui_attribute_value_text_color"
                android:textSize="14sp"
                tools:ignore="TouchTargetSizeCheck" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingVertical="10dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:fontFamily="@font/bai_jamjuree_medium"
                android:text="Debit Account"
                android:textColor="@color/osl_ui_attribute_label_text_color"
                android:textSize="13sp" />

            <AutoCompleteTextView
                android:id="@+id/md_debit_account"
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:layout_weight="1"
                android:completionThreshold="0"
                android:imeOptions="actionNext"
                android:inputType="textNoSuggestions"
                android:textColor="@color/osl_ui_attribute_value_text_color"
                android:textSize="14sp"
                tools:ignore="TouchTargetSizeCheck" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingVertical="10dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:fontFamily="@font/bai_jamjuree_medium"
                android:text="Credit Account"
                android:textColor="@color/osl_ui_attribute_label_text_color"
                android:textSize="13sp" />

            <AutoCompleteTextView
                android:id="@+id/md_credit_account"
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:layout_weight="1"
                android:completionThreshold="0"
                android:imeOptions="actionNext"
                android:inputType="textNoSuggestions"
                android:textColor="@color/osl_ui_attribute_value_text_color"
                android:textSize="14sp"
                tools:ignore="TouchTargetSizeCheck" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingVertical="10dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:fontFamily="@font/bai_jamjuree_medium"
                android:text="Credit Amount"
                android:textColor="@color/osl_ui_attribute_label_text_color"
                android:textSize="13sp" />

            <EditText
                android:id="@+id/md_credit_amount"
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:layout_weight="1"
                android:completionThreshold="0"
                android:imeOptions="actionNext"
                android:inputType="textNoSuggestions"
                android:textColor="@color/osl_ui_attribute_value_text_color"
                android:textSize="14sp"
                tools:ignore="TouchTargetSizeCheck" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingVertical="10dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:fontFamily="@font/bai_jamjuree_medium"
                android:text="Debit Amount"
                android:textColor="@color/osl_ui_attribute_label_text_color"
                android:textSize="13sp" />

            <EditText
                android:id="@+id/md_debit_amount"
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:layout_weight="1"
                android:completionThreshold="0"
                android:imeOptions="actionNext"
                android:inputType="textNoSuggestions"
                android:textColor="@color/osl_ui_attribute_value_text_color"
                android:textSize="14sp"
                tools:ignore="TouchTargetSizeCheck" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingVertical="10dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:fontFamily="@font/bai_jamjuree_medium"
                android:text="Handover to"
                android:textColor="@color/osl_ui_attribute_label_text_color"
                android:textSize="13sp" />

            <AutoCompleteTextView
                android:id="@+id/md_handover_to"
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:layout_weight="1"
                android:completionThreshold="0"
                android:imeOptions="actionNext"
                android:inputType="textNoSuggestions"
                android:textColor="@color/osl_ui_attribute_value_text_color"
                android:textSize="14sp"
                tools:ignore="TouchTargetSizeCheck" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingVertical="10dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:fontFamily="@font/bai_jamjuree_medium"
                android:text="Notes"
                android:textColor="@color/osl_ui_attribute_label_text_color"
                android:textSize="13sp" />

            <EditText
                android:id="@+id/md_notes"
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:layout_weight="1"
                android:completionThreshold="0"
                android:imeOptions="actionNext"
                android:inputType="textNoSuggestions"
                android:textColor="@color/osl_ui_attribute_value_text_color"
                android:textSize="14sp"
                tools:ignore="TouchTargetSizeCheck" />
        </LinearLayout>

        <View
            android:id="@+id/view3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1" />

    </LinearLayout>

    <TextView
        android:id="@+id/md_save_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#151414"
        android:gravity="center"
        android:onClick="onClickSave"
        android:padding="20dp"
        android:text="Save"
        android:textColor="#CCC7C7"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>